<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backdrop">

    <RelativeLayout
        android:id="@+id/layout_tittle_fragment"
        android:layout_width="0dp"
        android:layout_height="@dimen/toolBarHeight"
        android:background="@color/frontdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/marginstart_tittle_fragment"
            android:text="@string/account_tittle_fragment"
            android:textStyle="bold"
            android:textColor="@color/textColorDark"
            android:textSize="@dimen/text_size_title_fragment" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_login_accuont"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/frontdrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_tittle_fragment">


        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_margin="16dp"
            android:layout_marginStart="@dimen/marginstart_items"
            android:layout_marginTop="@dimen/marginstart_items"
            android:layout_marginBottom="@dimen/marginstart_items"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textview_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginstart_items"
            android:text="Pradana Mahendra"
            android:textStyle="bold"
            android:textColor="@color/textColorDark"
            app:layout_constraintStart_toEndOf="@id/imageView_avatar"
            app:layout_constraintTop_toTopOf="@id/imageView_avatar" />

        <TextView
            android:id="@+id/textview_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/marginstart_items"
            android:text="Pradana Mahendra"
            android:textColor="@color/textColorDark"
            app:layout_constraintStart_toEndOf="@id/imageView_avatar"
            app:layout_constraintTop_toBottomOf="@id/textview_fullname" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>